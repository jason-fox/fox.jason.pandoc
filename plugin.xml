<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="dita-ot/plugin.rnc" type="application/relax-ng-compact-syntax"?>
<plugin id="fox.jason.passthrough.pandoc" version="1.2.0">
	<feature extension="ant.import" file="process_pandoc.xml"/>
	<!-- Ensure the plugin's error and logging messages are available -->
	<feature extension="dita.xsl.messages" file="resource/messages.xml"/>
	<!--
		This plugin requires the XMLTask lib and the passthrough reader
	-->
	<require plugin="org.doctales.xmltask"/>
	<require plugin="fox.jason.passthrough"/>
	
	<!-- Uses the passthrough extension point and file reader -->
	<feature extension="dita.parser">
		<parser format="pandoc" class="fox.jason.passthrough.parser.FileReader"/>
	</feature>
	<feature extension="passthrough.process" value="pandoc.process"/>
	<feature extension="passthrough.pre" value="pandoc.check"/>
</plugin>